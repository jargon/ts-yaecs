    "scripts": {
        "clean": "rimraf dist",
        "lint": "tslint --project tsconfig.json",
        "lint-fix": "tslint --fix --project tsconfig.json",
        "start": "webpack serve --inline --config config/webpack.dev.js --progress",
        "build": "npm run clean && webpack --config config/webpack.prod.js --color --progress --bail",
        "test": "mocha --require mock-local-storage --reporter spec -r config/testSetup.js \"test/**/*test.ts\" \"test/**/*test.tsx\"",
        "test:watch": "npm run test -- --extension ts,tsx --watch --watch-files src,test --recursive"
    },
